<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1102px"
    android:layout_height="73px"
    android:background="@drawable/fav_listview_row"
    >
   
    <Button
        android:id="@+id/swipe_delete"
        android:layout_width="100px"
        android:layout_height="50px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/swipe_delete"/>
    
    <com.almoufasseralsaghir.utils.FontFitTextView 
            android:id="@+id/reminder_time"
            android:layout_width="400px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="200px"
            android:textColor="#5a2e14"
            android:ellipsize="none"
            android:gravity="center"
        	android:maxLines="1"
            />

</RelativeLayout>