<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="545px"
    android:layout_height="42px"
    android:background="@drawable/calendar_listview_bg_new"
    >
   
    <ImageView
        android:id="@+id/reminder_time_signal"
        android:layout_width="30px"
        android:layout_height="30px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:background="@drawable/calender_reminder_inactivated"/>
    
    <com.almoufasseralsaghir.utils.FontFitTextView 
            android:id="@+id/reminder_time"
            android:layout_width="80px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50px"
            android:textColor="#585859"
            android:ellipsize="none"
            android:gravity="center"
        	android:maxLines="1"
        	android:text="00:00"
            />

</RelativeLayout>