<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1422px"
    android:layout_height="800px"
    android:layout_gravity="center"
    android:background="@drawable/questions_bg_format_3">
    
    
    
    
    <Button 
	    android:id="@+id/select_favourite"
        android:layout_width="134px"
        android:layout_height="162px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="130px"
        android:background="@drawable/eya_dialog_favourite_inactive" 
	    />
    
    <com.almoufasseralsaghir.utils.FontFitTextView 
            android:id="@+id/eya_repetitions"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="210px"
            android:layout_marginBottom="120px"
            android:textColor="#FFF"
            android:ellipsize="none"
            android:gravity="center"
        	android:maxLines="1"
        	android:textStyle="bold"
        	
            />
 
	
	<Button 
	    android:id="@+id/questions_info"
        android:layout_width="87px"
        android:layout_height="86px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/e4_info" 
	    />
	
	<Button 
	    android:id="@+id/questions_favourites"
        android:layout_width="89px"
        android:layout_height="88px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/e4_favourites" 
	    />
	
	<Button 
	    android:id="@+id/questions_previous"
        android:layout_width="89px"
        android:layout_height="87px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/e4_previous" 
	    />
	
	<Button 
	    android:id="@+id/questions_home"
        android:layout_width="87px"
        android:layout_height="87px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/e4_home" 
	    />
	
	
	
	
</RelativeLayout>
