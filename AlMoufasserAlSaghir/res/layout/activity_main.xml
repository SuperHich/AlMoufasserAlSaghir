<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1422px"
    android:layout_height="800px"
    android:layout_gravity="center"
    android:background="@drawable/bg2" >

    <Button
        android:id="@+id/register"
        android:layout_width="133px"
        android:layout_height="121px"
         android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:background="@drawable/register_btn" 
        android:visibility="visible"/>

    <RelativeLayout 
        android:id="@+id/register_interface"
        android:layout_width="510px"
        android:layout_height="144px"
         android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:background="@drawable/identification_bg" 
        android:visibility="invisible">
        <Button 
            android:id="@+id/login_btn"
            android:layout_width="95px"
            android:layout_height="36px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20px"
            android:layout_marginBottom="25px"
            android:background="@drawable/identification_enter"
            />
        <Button 
            android:id="@+id/new_user_btn"
            android:layout_width="179px"
            android:layout_height="36px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30px"
            android:layout_marginBottom="25px"
            android:background="@drawable/ident_new_user"
            />
        <EditText 
            android:id="@+id/mail_login"
            android:layout_width="470px"
            android:layout_height="48px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:paddingLeft="20px"
            android:textColor="#062e4b"
            android:textSize="25px"
            android:textStyle="bold"
            android:background="@drawable/ident_edittext_bg"
            />
        <ImageView 
            android:id="@+id/hint_login"
            android:layout_width="470px"
            android:layout_height="48px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:background="@drawable/ident_edittext_hint"
            />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/logged_in"
        android:layout_width="fill_parent"
        android:layout_height="144px"
        android:visibility="invisible">
       
        <Button 
            android:id="@+id/deconnect"
            android:layout_width="64px"
            android:layout_height="60px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100px"
            android:layout_marginTop="50px"
            android:background="@drawable/deconnect"
            />
        <Button 
            android:id="@+id/settings"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="200px"
            android:layout_marginTop="50px"
            android:background="@drawable/settings"
            />
        <Button 
            android:id="@+id/account_settings"
            android:layout_width="73px"
            android:layout_height="57px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="290px"
            android:layout_marginTop="50px"
            android:background="@drawable/account_settings"
            />

        <ImageView 
            android:id="@+id/welcome_msg"
            android:layout_width="329px"
            android:layout_height="73px"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="100px"
            android:layout_marginTop="50px"
            android:background="@drawable/welcome_msg"
            />
        
        <TextView 
            android:id="@+id/welcome_logged_name"
            android:layout_width="600px"
            android:layout_height="73px"
            android:gravity="right|center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="450px"
            android:layout_marginTop="45px"
            android:textStyle="italic|bold"
            android:textColor="#062e4b"
            android:textSize="35px"
            />
        
    </RelativeLayout>
    

    <ListView
        android:id="@+id/listView1"
        android:layout_width="300px"
        android:layout_height="420px"
        android:layout_marginLeft="595px"
        android:layout_marginTop="200px"
        android:cacheColorHint="#00000000"
        android:listSelector="@drawable/selection" />

    <ImageView 
        android:id="@+id/herbes"
        android:layout_width="1422px"
        android:layout_height="245px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg2_herbes" 
        />
    
</RelativeLayout>