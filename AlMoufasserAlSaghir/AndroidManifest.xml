        <activity
            android:name="com.almoufasseralsaghir.CalendarActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.almoufasseralsaghir.EyetPlayerActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.almoufasseralsaghir.QuestionsActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.almoufasseralsaghir.ElementBuilderActivity"
            android:screenOrientation="landscape" >
        </activity>
        <receiver android:name="com.almoufasseralsaghir.reminder.AlarmManagerBroadcastReceiver">
            <intent-filter>
                <action android:name="ACTION_CLICK" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
